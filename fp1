#news item

elif page == "NEWS Data":
    # Set NewsAPI Key (Replace with your own key)
    NEWS_API_KEY = "246ba9ee11ab408a9b55c252e58a37da"
    newsapi = NewsApiClient(api_key=NEWS_API_KEY)

    # Set up Streamlit app
    st.title("üìà Stock News App")

    #User input for stock ticker
    stock_ticker = st.text_input("Enter Stock Ticker (e.g., AAPL, GOOG, TSLA)").upper()
    # Function to fetch stock news
    def fetch_news(ticker):
        try:
            news_data = newsapi.get_everything(q=ticker, language="en", sort_by="publishedAt")
            return news_data.get("articles", [])  # Ensure it returns a list
        except Exception as e:
            st.error(f"Error fetching news: {e}")
            return []
    
    # Function to display stock info
    def display_stock_info(ticker):
        try:
            stock = yf.Ticker(ticker)
            info = stock.info
            st.subheader(f"üìä {info.get('longName', ticker)} Stock Info")
            st.write(f"üìå **Industry:** {info.get('industry', 'N/A')}")
            st.write(f"üèõ **Exchange:** {info.get('exchange', 'N/A')}")
            st.write(f"üí∞ **Current Price:** ${info.get('currentPrice', 'N/A')}")
            st.write(f"üìâ **52 Week Low:** ${info.get('fiftyTwoWeekLow', 'N/A')}")
            st.write(f"üìà **52 Week High:** ${info.get('fiftyTwoWeekHigh', 'N/A')}")
            # Additional Stock Metrics
            st.write(f"üìä **Market Cap:** ${info.get('marketCap', 'N/A'):,}")
            st.write(f"üìà **P/E Ratio:** {info.get('trailingPE', 'N/A')}")
            st.write(f"üí∏ **Dividend Yield:** {info.get('dividendYield', 'N/A')*100:.2f}%")
            st.write(f"üìâ **Beta (Volatility):** {info.get('beta', 'N/A')}")
            st.write(f"üìä **Volume:** {info.get('volume', 'N/A'):,} vs Avg: {info.get('averageVolume', 'N/A'):,}")
            st.write(f"üí∞ **EPS (Earnings Per Share):** ${info.get('trailingEps', 'N/A')}")
            st.write(f"üîÑ **Previous Close:** ${info.get('previousClose', 'N/A')}")
            st.write(f"üöÄ **Open Price:** ${info.get('open', 'N/A')}")
            return info
        except Exception as e:
            st.error(f"Error fetching stock info: {e}")
            return None
    
    # Initialize session state for news index
    if "news_index" not in st.session_state:
        st.session_state.news_index = 0
    if "news_articles" not in st.session_state:
        st.session_state.news_articles = []
    
    # Fetch stock data & news when a ticker is entered
    if stock_ticker:
        stock_info = display_stock_info(stock_ticker)

        if st.sidebar.button("üîÑ Fetch News"):
            st.session_state.news_articles = fetch_news(stock_ticker)
            st.session_state.news_index = 0  # Reset index
   
        # Display news one by one with navigation
        if st.session_state.news_articles:
            news = st.session_state.news_articles[st.session_state.news_index]
        
            st.subheader(f"üì∞ {news.get('title', 'No Title Available')}")
            st.write(f"üìù {news.get('description', 'No Description Available')}")
            st.write(f"üîó [Read More]({news.get('url', '#')})")

            # Navigation buttons for news
            col1, col2 = st.columns(2)
            with col1:
                if st.session_state.news_index > 0:
                    if st.button("‚¨ÖÔ∏è Previous News"):
                        st.session_state.news_index -= 1
                    st.rerun()
            with col2:
                if st.session_state.news_index < len(st.session_state.news_articles) - 1:
                    if st.button("Next News ‚û°Ô∏è"):
                        st.session_state.news_index += 1
                        st.rerun()
        else:
            st.warning("No news available. Click 'üîÑ Fetch News' to get latest updates.")
    # Refresh Button
    if st.button("üîÑ Refresh Data"):
        st.rerun()

     

      
